# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret

# Service Account (alternative to OAuth2)
SERVICE_ACCOUNT_JSON_PATH=./service-account.json

# Email Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# SECURITY KEYS (generate your own, don't use these exact strings)
SECRET_KEY=your-super-secret-long-random-string
WEBHOOK_SECRET=your-webhook-secret-string

# DATABASE (local sqlite for dev)
DATABASE_URL=sqlite:///./db.sqlite3

# REDIS (local instance)
REDIS_URL=redis://localhost:6379/0

# FRONTEND CORS
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# DEBUGGING MODE
DEBUG=True
